datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  projects  Project[]
  roles     String[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Project {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  imgUrl    String
  title     String
  updatedAt DateTime @updatedAt
  url       String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}